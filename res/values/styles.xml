<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>
    <!--titlebar标题-->
    <style name="txt_titlebar_message">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_textSize</item>
    </style>

    <!--对话框样式-->
    <style name="alertView" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--selectpop动画-->
    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/head_in</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/head_out</item>    //退出时的动画
    </style>
</resources>
